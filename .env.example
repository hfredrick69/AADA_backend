# Create an example file showing required environment variables (with dummy values)
cat > .env.example << 'EOF'
# Database
DATABASE_URL=postgresql://username:password@server/database

# Square API
SQUARE_ACCESS_TOKEN=your-square-token-here
SQUARE_LOCATION_ID=your-location-id-here
SQUARE_ENVIRONMENT=sandbox

# Firebase
FIREBASE_CREDENTIALS=path/to/firebase_service_key.json

# JWT Authentication
JWT_SECRET_KEY=generate-a-secure-random-string

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
